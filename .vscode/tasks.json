{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cpp build active file",
      "command": "/usr/bin/cmake",
      "args": [],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "cmake-format: CMakeLists.txt",
      "command": "cmake-format",
      "problemMatcher": [],
      "args": [
        "-c", "${workspaceFolder}/.cmake-format.yaml",
        "-o", "${workspaceFolder}/CMakeLists.txt",
        "CMakeLists.txt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "cmake-format: Sources/CMakeLists.txt",
      "command": "cmake-format",
      "problemMatcher": [],
      "args": [
        "-c", "${workspaceFolder}/.cmake-format.yaml",
        "-o", "${workspaceFolder}/Sources/CMakeLists.txt",
        "Sources/CMakeLists.txt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "cmake-format: Benchmarks/CMakeLists.txt",
      "command": "cmake-format",
      "problemMatcher": [],
      "args": [
        "-c", "${workspaceFolder}/.cmake-format.yaml",
        "-o", "${workspaceFolder}/Benchmarks/CMakeLists.txt",
        "Benchmarks/CMakeLists.txt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "start: Tracy",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "linux": {
        "command": "$(which tracy)",
      },
      "osx": {
        "command": "$(which tracy)"
      }
    },
    {
      "type": "cmake",
      "label": "Build: Docs",
      "dependsOn": "clean: docs",
      "command": "build",
      "preset": "${command:cmake.activeBuildPresetName}",
      "targets": [
        "doxygen",
      ],
      "options": {
        "cwd": "${workspaceFolder}/build/"
      },
      "group": {
        "kind": "build",
        "isDefault": false,
      },
    },
    {
      "type": "shell",
      "label": "clean: docs/",
      "options": {
        "cwd": "${workspaceFolder}/docs/"
      },
      "osx": {
        "command": "find . '!' -name '.gitkeep' -delete"
      },
      "linux": {
        "command": "find '!' -name '.gitkeep' -delete"
      },
      "problemMatcher": [],
      "detail": "Clean the docs/ directory.",
    },
    {
      "type": "shell",
      "label": "open: docs/index.html",
      "dependsOn": "Build: Docs",
      "options": {
        "cwd": "${workspaceFolder}/docs/html"
      },
      "problemMatcher": [],
      "detail": "Open Doxygen docs in browser",
      "osx": {
        "command": "open index.html"
      },
      "linux": {
        "command": "open index.html",
      }
    },
    {
      "type": "shell",
      "label": "Open Sources/ coverage",
      "command": "open index.html",
      "options": {
        "cwd": "${workspaceFolder}/build/Sources/html"
      },
      "problemMatcher": [],
      "detail": "open Sources/ coverage in browser"
    },
    {
      "type": "shell",
      "label": "Open Tests/ coverage",
      "command": "open index.html",
      "options": {
        "cwd": "${workspaceFolder}/build/Tests/html"
      },
      "problemMatcher": [],
      "detail": "open Tests/ coverage in browser"
    }
  ],
}